@model CreditCardManagementSystem.Models.Cards

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Cards</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.CardNumber, new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.CardNumber, new { disabled="disabled",@readonly="readonly",@Value=ViewBag.cardNumber})
                @Html.ValidationMessageFor(model => model.CardNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ExpirationDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ExpirationDate, new { disabled = "disabled", @readonly = "readonly", @Value = ViewBag.exprDate })
                @Html.ValidationMessageFor(model => model.ExpirationDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cvc, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Cvc,new {disabled="disabled", @Value=ViewBag.CVC})
                @Html.ValidationMessageFor(model => model.Cvc)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CardName, new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.CardName, new {disabled="disabled", @Value=ViewBag.fullName})
                @Html.ValidationMessageFor(model => model.CardName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReleaseDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ReleaseDate, new {disabled="disabled",@Value=ViewBag.date })
                @Html.ValidationMessageFor(model => model.ReleaseDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.isActive, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.isActive)
                @Html.ValidationMessageFor(model => model.isActive)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pin, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pin)
                @Html.ValidationMessageFor(model => model.Pin)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CardType, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CardType)
                @Html.ValidationMessageFor(model => model.CardType)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" disabled />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
